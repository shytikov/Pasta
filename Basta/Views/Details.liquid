{% extends "Layout.liquid" %}

{% block title %}#{{ Model.Id }}{% endblock %}

{% block header %}
	<link rel="stylesheet" type="text/css" href="/content/css/vendor/prettify.css" />
    <script type="text/javascript" src="/content/js/vendor/prettify.js"></script>
{% endblock %}

{% block load %} onload="prettyPrint()"{% endblock %}

{% block content %}
    <h1>#{{ Model.Id }}</h1>
	{% if Model.Image %}
		<div id="Content">{{ Model.Content }}</div>
	{% else %}
		<pre><code class="prettyprint linenums">{{ Model.Content }}</code></pre>
	{% endif %}
{% endblock %}
